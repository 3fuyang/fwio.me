---
import '@fontsource/ibm-plex-mono'
import BaseLayout from './BaseLayout.astro'
import './MarkdownLayout.css'

interface Props {
  title: string
  keywords?: string[]
  description?: string
  lang?: string
}

const { title, keywords, description, lang } = Astro.props
---

<BaseLayout {...{ title, keywords, description, lang }}>
  <article
    class="prose prose-base prose-slate dark:prose-invert prose-p:text-pretty mx-auto max-w-prose"
  >
    <slot />
  </article>
</BaseLayout>
